{% trans_default_domain "affiliate" %}

{% spaceless %}
{
    "draw": "{{ draw }}",
    "recordsTotal": {{ recordsTotal }},
    "recordsFiltered": {{ recordsFiltered }},
    "data" : [
        {% for affiliate in affiliates %}
            {
                "DT_RowId": "{{ '_' ~ affiliate.id }}",
                "DT_RowClass": "{{ 'affiliate' }}",
                "id": "{{ affiliate.id }}",
                "affiliate": {
                    "store": "{{ affiliate.store.name}}",
                    "name": "{{ affiliate.name }}",
                    "website": "{{ affiliate.website }}"
                }
            }{% if not loop.last %},{% endif %}
        {% endfor %}
    ]
}
{% endspaceless %}
