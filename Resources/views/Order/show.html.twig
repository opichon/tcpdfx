{% extends template %}

{% trans_default_domain "order" %}

{% block _core_page_title %}{% trans with { '%id%': order.id } %}order.show.page_title{% endtrans %}{% endblock %}

{% block _core_page_nav %}
<a href="{{ path('orders') }}"><i class="fa fa-long-arrow-left"></i> {% trans %}order.show.back{% endtrans %}</a>
{% endblock %}

{% block _core_content %}

{% block parties %}
{% endblock %}
<div class="row">
	<div class="col-sm-6">
		<div class="panel panel-default">
			<div class="panel-body">
				<dl class="dl-horizontal">
					<dt>{% trans %}order.show.number{% endtrans %}</dt>
					<dd>{{ order.id }}</dd>
					<dt>{% trans %}order.show.date{% endtrans %}</dt>
					<dd>{{ order.date|date('dd.MM.yyyy hh:mm', null, app.request.locale) }}</dd>
				</dl>
			</div>
		</div>
	</div>
	<div class="col-sm-6">
		<div class="panel panel-default">
			<div class="panel-body">
				<address>
					<strong>{{ order.customer.name }}</strong>
				</address>
			</div>
		</div>
	</div>
</div>
{% block items %}
<div class="panel panel-default items">
	<div class="panel-heading">
		<h4 class="panel-title">{% trans %}order.show.items{% endtrans %}</h4>
	</div>
	<div class="panel-body">
		<table class="table table-condensed">
			<thead>
				<th class="name">{% trans %}order.show.name{% endtrans %}</th>
				<th class="quantity">{% trans %}order.show.quantity{% endtrans %}</th>
				<th class="amount">{% trans %}order.show.price_excl{% endtrans %}</th>
				<th class="amount">{% trans %}order.show.amount_excl{% endtrans %}</th>
				<th class="amount">{% trans %}order.show.amount_tax{% endtrans %}</th>
				<th class="amount">{% trans %}order.show.amount_incl{% endtrans %}</th>
			</thead>
			<tbody>
			{% for item in order.items %}
				<tr>
					<td>{{ item.name }}</td>
					<td class="number">{{ item.quantity|integer(app.request.locale) }}</td>
					<td class="amount">{{ item.priceExcl|currency(item.currencyId, app.request.locale) }}</td>
					<td class="amount">{{ item.amountExcl|currency(item.currencyId, app.request.locale) }}</td>
					<td class="amount">{{ item.taxAmount|currency(item.currencyId, app.request.locale) }}</td>
					<td class="amount">{{ item.amountIncl|currency(item.currencyId, app.request.locale) }}</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
</div>
{% endblock %}

{% block payments %}
{% include "DzangocartCoreBundle:Order:payments.html.twig" %}
{% endblock %}

{% endblock %}

{% block _core_head_style %}
	{{ parent() }}
	{% include "DzangocartCoreBundle:Order:order_head_style.html.twig" %}
{% endblock %}

{% block _core_foot_script %}
	{{ parent() }}
	{% include "DzangocartCoreBundle:Order:order_foot_script.html.twig" %}
{% endblock %}
