{% spaceless %}

{% trans_default_domain "payment" %}

<div class='btn-group'>
	<button type='button' class='dropdown-toggle' data-toggle='dropdown'>
		<i class='fa fa-cog'></i>
	</button>
	<ul class='dropdown-menu dropdown-menu-right navbar-right' role='menu'>
		{% if payment.order %}
		<li>
			{% if param['customer'] is defined %}<a href='{{ path('user_order', { id: payment.order.id }) }}'>{{ order.id  }}</a>{% else %}<a href='{{ path('order', { id: payment.order.id }) }}'>{% trans %}payment.payments.actions.show{% endtrans %}</a>{% endif %}
		</li>
		{% endif %}
	</ul>
</div>
{% endspaceless %}
