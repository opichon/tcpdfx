{% extends "DzangocartCoreBundle::layout.html.twig" %}

{% trans_default_domain "payment" %}

{% block page_title %}{% trans %}payment.payments.page_title{% endtrans %}{% endblock %}

{% block bodyclass %}payments{% endblock %}

{% block content %}
    {% include "DzangocartCoreBundle:Payment:payments.html.twig" %}
{% endblock %}

{% block head_style %}
    {{ parent() }}
    {% stylesheets filter="cssrewrite" output="css/*.css"
        'bundles/uamdatatables/css/jquery.dataTables_bootstrap.css'
        'bundles/dzangocartcore/css/table.css'
        'bundles/dzangocartcore/css/payment/payments.css'
    %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock %}

{% block foot_script %}
    {{ parent() }}
    {% javascripts
        'bundles/uamdatatables/js/jquery.dataTables.min.js'
        'bundles/uamdatatables/js/jquery.dataTables_bootstrap.js'
        'bundles/dzangocartcore/js/scripts/payment/payments.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
    dzangocart.payments = {
        dataTables: {
            sAjaxSource: "{{ path('payments', { _format: 'json' }) }}"
        }
    };
    </script>
{% endblock %}
