{% extends "DzangocartCoreBundle::layout.html.twig" %}

{% trans_default_domain "promotion" %}

{% block page_title %}{% trans %}promotion.promotions.page_title{% endtrans %}{% endblock %}

{% block bodyclass %}promotions{% endblock %}

{% block page_nav %}
    <div class="pull-right">
        <a href="{{ path('promotion_create') }}">
            {% trans %}promotion.promotions.create{% endtrans %}
        </a>
    </div>
{% endblock %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('promotion.edit.success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
    {% endfor %}
    {% include "DzangocartCoreBundle:Promotion:promotion.html.twig" %}
{% endblock %}

{% block head_style %}
    {{ parent() }}
    {% include "DzangocartCoreBundle:Promotion:promotions_head_style.html.twig" %}
{% endblock %}

{% block foot_script %}
    {{ parent() }}
	{% include "DzangocartCoreBundle:Promotion:promotions_foot_script.html.twig" %}
{% endblock %}
