{% javascripts
	'bundles/dzangocartcore/vendor/datatables/media/js/jquery.dataTables.min.js'
	'bundles/dzangocartcore/vendor/datatables-bootstrap3/BS3/assets/js/datatables.min.js'
	'bundles/dzangocartcore/vendor/typeahead.js/dist/typeahead.bundle.min.js'
	'bundles/dzangocartcore/vendor/momentjs/min/moment-with-langs.min.js'
	'bundles/dzangocartcore/vendor/bootstrap-daterangepicker/daterangepicker.min.js'
	'bundles/dzangocartcore/js/sale/sales.js'
%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
<script>
dzangocart.sales = {
    dataTables: {
        ajax: {
            url: "{{ path('sales_list', {customer_id: customer.id })|raw }}"
        },
        columnDefs: [
            { orderable: false, targets: [ 0, 11 ] },
            { visible: false, targets: [ 0, 3, 4 ] }
        ],
        language: {
            url: "/bundles/dzangocartcore/datatables/" + dzangocart.locale + ".json"
        }
    },
    typeahead: {
        remote: {
         url:  "{{ path('customer_search', { search: '__query__' }) }}"
        }
    }
};
</script>
