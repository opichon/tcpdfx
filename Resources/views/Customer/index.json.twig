{% trans_default_domain "customer" %}

{% spaceless %}
{
    "sEcho": "{{ sEcho }}",
    "iTotalRecords": {{ iTotalRecords }},
    "iTotalDisplayRecords": {{ iTotalDisplayRecords }},
    "aaData" : [
        {% for customer in customers %}
            {
                "DT_RowId": "{{ '_' ~ customer.id }}",
                "DT_RowClass": "{{ 'customer' }}",
                "id": "{{ customer.id }}",
                "0": "",
                "1": "{{ customer.realm }}",
                "2": "{{ customer.profile.surname }}",
                "3": "{{ customer.profile.GivenNames }}",
                "4": "{% if(customer.profile.gender == '1') %} m {% elseif(customer.profile.gender == '0') %} f {% else %} {% endif %}",
                "5": "{{ customer.profile.email }}",
                "6": "{{ customer.getSales|currency('EUR', app.request.locale) }}",
                "7": ""
            }{% if not loop.last %},{% endif %}
        {% endfor %}
    ]
}
{% endspaceless %}
