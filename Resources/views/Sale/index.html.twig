{% extends template %}

{% trans_default_domain "sale" %}

{% block _core_page_title %}
    {% if customer is defined %}
        {% trans %} purchase.purchases.page_title {% endtrans %}
    {% else %}
        {% trans %} sale.sales.page_title {% endtrans %}
    {% endif %}
{% endblock %}

{% block _core_page_class %}sales{% endblock %}

{% block _core_content %}
    {% include 'DzangocartCoreBundle:Sale:sales.html.twig' %}
{% endblock %}

{% block _core_head_style %}
    {{ parent() }}
    {% include 'DzangocartCoreBundle:Sale:sales_head_style.html.twig' %}
{% endblock %}

{% block _core_foot_script %}
    {{ parent() }}
    {% include 'DzangocartCoreBundle:Sale:sales_foot_script.html.twig' %}
{% endblock %}
