{% trans_default_domain "sale" %}

{% include 'DzangocartCoreBundle:Sale:filters.html.twig' %}

<table class="table table-condensed table-hover" id="sales">
	<thead>
		<tr>
			<th class="selectall"></th>
			<th class="datetime">{% trans %}sale.sales.date{% endtrans %}</th>
			<th class="id">{% trans %}sale.sales.order_id{% endtrans %}</th>
			<th class="store">{% trans %}sale.sales.store{% endtrans %}</th>
			<th class="customer">{% trans %}sale.sales.customer{% endtrans %}</th>
			<th class="name">{% trans %}sale.sales.name{% endtrans %}</th>
			<th class="quantity">{% trans %}sale.sales.quantity{% endtrans %}</th>
			<th class="gross">{% trans %}sale.sales.gross{% endtrans %}</th>
			<th class="tax">{% trans %}sale.sales.tax{% endtrans %}</th>
			<th class="net">{% trans %}sale.sales.net{% endtrans %}</th>
			<th class="actions"><i class="fa fa-cog"></i></th>
		</tr>
		<tr class="filters">
			<th></th>
			<th></th>
			<th class="filters_keyup">{{ form_widget(filters.order_id) }}</th>
			<th>{{ form_widget(filters.store) }}</th>
			<th>{{ form_widget(filters.customer) }}</th>
			<th class="filters_keyup">{{ form_widget(filters.name) }}</th>
			<th></th>
			<th></th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	</tbody>
</table>
