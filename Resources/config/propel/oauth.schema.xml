<?xml version="1.0" encoding="UTF-8"?>
<database name="default" namespace="Dzangocart\Bundle\CoreBundle\Model" defaultIdMethod="native">
    <table name="store_oauth_settings" phpName="StoreOAuthSettings" idMethod="native">
        <column name="id"               type="integer" primaryKey="true" required="true" />
        <column name="client_id"        type="varchar" size="255" required="true" />
        <column name="secret_key"       type="varchar" size="255" required="true" />
        <column name="auth_code_url"    type="varchar" size="255" required="true" />
        <column name="access_token_url" type="varchar" size="255" required="true" />
        <foreign-key foreignTable="store" name="FI_store_oauth_settings_store" onDelete="restrict" onUpdate="restrict">
            <reference local="id" foreign="id"/>
        </foreign-key>
    </table>
    <table name="user_oauth_token" phpName="UserOauthToken" idMethod="native">
        <column name="user_id"       type="integer" primaryKey="true" required="true" />
        <column name="token"         type="varchar" size="256" required="false" />
        <column name="expires_at"    type="timestamp" required="false" />
        <column name="scope"         type="varchar" size="256" required="false" />
        <column name="refresh_token" type="varchar" size="256" required="false" />
        <foreign-key foreignTable="dzango_user" name="FI_user_oauth_token_dzango_user" onDelete="restrict" onUpdate="restrict">
            <reference local="user_id" foreign="id" />
        </foreign-key>
    </table>
</database>
