<?xml version="1.0" encoding="UTF-8"?>
<database name="default" namespace="Dzangocart\Bundle\CoreBundle\Model" defaultIdMethod="native">
    <table name="address" idMethod="native">
        <column name="id"      type="integer" primaryKey="true" autoIncrement="true" required="true" />
        <column name="line1"   type="varchar" size="30" required="true" />
        <column name="line2"   type="varchar" size="30" required="false" />
        <column name="city"    type="varchar" size="30" required="true" />
        <column name="state"   type="varchar" size="30" required="false" />
        <column name="zip"     type="varchar" size="15" required="false" />
        <column name="country" type="varchar" size="2" required="true" defaultValue="FR" />
    </table>
</database>